<% @users.each do |user, index| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><% if current_user.admin? && !current_user?(user) %><%= link_to 'Destroy', user, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }%><% end %></td>
  </tr>
<% end %>